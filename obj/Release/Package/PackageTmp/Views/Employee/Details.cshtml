@model EmpResumeBuilder.Models.Employee

@{
    ViewBag.Title = "Details";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>*@
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <title>Index</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 9pt;
        }
        .divname {
            column-count: 3;
            background-color: #000057;
            color: white;
            height: 60px;
            padding: 20px;
            text-align:left;
        }

        .btn {
            background-color: #c32148; /* Green */
            border: none;
            color: white;
            text-align: center;
            display: inline-block;
            font-size: 16px;
        }

        #EmailTd {
            /*padding-left: 10px;*/
        }

        .MobileTd {
            padding-left: 7px;
        }

        p {
            padding-top: 5px;
            padding-bottom: 5px;
        }

        td, th {
            padding-bottom: 10px;
        }

        .EmailTable {
            border: 1px solid
        }

        .prjtd {
            white-space: pre-line;
        }
        body {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div style="padding-top: 10px; padding-left: 20px;" >
        @using (Html.BeginForm("Export", "Employee", FormMethod.Post))
        {
            <input type="hidden" name="GridHtml" />
            @*<input type="submit" id="btnSubmit" value="Export" />*@
            <a href='@Url.Action("EmpDetails", "Employee")' class="btn btn-primary" style="background-color:grey !important">Back to List</a>
            <input type="submit" value="Export to Pdf" id="btnSubmit" class="btn btn-default" />
            @*<button id="btnSubmit">Export</button>*@
        }
    </div>
    <br />
    <form class="form" style="max-width: none; width: 1005px; padding-left:20px;">

        <div contenteditable class="divname" rows>
            <p class="divname" align="left" style="text-align:left; ">@Html.DisplayFor(model => model.Name)</p>
        </div>

        <div style="width:100%; padding-top:10px;">
            <div style="float: left; width: 48%; padding-bottom: 10px; border: 1px solid;">

                <table>
                    <tr>
                        <th align="center"><span>Email :</span></th>
                        <td id="EmailTd" style="font-weight: normal;" align="left">@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <th align="center"><span class="MobileTd">Mobile :</span></th>
                        <td class="MobileTd" style="font-weight: normal;" align="left">@Html.DisplayFor(model => model.MobileNo)</td>
                    </tr>
                </table>
            </div>
            <div style="float:right; width:50%;border:1px solid;height:500px; ">
                <p style="background-color: #000057; color: white;">Selected Relevant Experience</p>
                <table>
                    <tr>
                        <td class="prjtd" style="white-space: pre-line;">@Html.DisplayFor(model => model.RelevantExperience)</td>
                    </tr>

                </table>
            </div>
        </div>
        <div style="width:48%; padding-top:10px;">
            <div style="float: left; width: 100%; padding-top: 10px; border: 1px solid; height: 235px; ">
                <p class="col-lg-12" style="background-color: #000057; color: white;">Project Details</p>

                <table>
                    <tr>
                        <td class="prjtd">@Html.DisplayFor(model => model.ProjectDetails)</td>
                    </tr>
                </table>
            </div>

        </div>
        <div style="width:48%; padding-top:10px;">
            <div style="float: left; width: 100%; padding-top: 10px; border: 1px solid; height: 200px; ">
                <p class="col-lg-12" style="background-color: #000057; color: white;">Technical Experience</p>

                <table>
                    <tr>
                        <td class="prjtd">@Html.DisplayFor(model => model.TechnicalSkills)</td>
                    </tr>
                </table>
            </div>

        </div>
    </form>
    <div id="Grid" style="display:none;">
        <div class="container-fluid">
            <div class="column" style="background-color: #000057; color: white; padding-left:5px;">
                <h2> @Html.DisplayFor(model => model.Name)</h2>
            </div>
            <div class="column">
                <table style="width: 100%; margin-top: 10px; font-size: 0.8em; white-space: pre-line; ">
                    <tr>
                        <th scope="col" colspan="3" style="border: 1px solid;width:45%;padding-top:2px;">
                            <p class="col-md-6"><span style="font-weight: lighter;">Email ID</span><span>:</span>@Html.DisplayFor(model => model.Email)</p>
                            <p class="col-md-6"><span style="font-weight: lighter;">Contact Number</span><span>:</span>@Html.DisplayFor(model => model.MobileNo)</p>
                        </th>

                        <th rowspan="1" colspan="4" style="vertical-align: middle; text-align: center; background-color: #000057; color: white; width: 55%;">
                            Selected Relevant Experience
                        </th>
                    </tr>

                    <tr style="white-space: pre-line; ">
                        <th rowspan="1" colspan="3" style="vertical-align: middle; width: 45%; text-align: center; background-color: #000057; padding-top: 5px; padding-bottom: 5px; color: white;">Project Details</th>
                        <td rowspan="16" colspan="4" style="border: 1px solid; height: 50%; width: 55%; padding-top: -355px; white-space: pre-line; ">@Html.DisplayFor(model => model.RelevantExperience)</td>
                    </tr>
                    <tr style="white-space: pre-line; ">

                        <td rowspan="7" colspan="3" style="border: 1px solid; padding-bottom:10px;padding-top:5px; width: 50%; white-space: pre;">@Html.DisplayFor(model => model.ProjectDetails)</td>
                    </tr>
                    <tr style="white-space: pre-line; ">

                        <th scope="col" colspan="3" rowspan="1" style="vertical-align: middle; width: 50%; text-align: center; padding-top: 5px; padding-bottom: 5px; background-color: #000057; color: white;">
                            Technical Skills
                        </th>
                    </tr>
                    <tr style="white-space: pre-line; ">

                        <td rowspan="8" colspan="3" style="border: 1px solid; padding-top: -275px; width: 50%; white-space: pre-line; ">@Html.DisplayFor(model => model.TechnicalSkills)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    

    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                $("input[name='GridHtml']").val($("#Grid").html());
            });
        });
    </script>
</body>
</html>