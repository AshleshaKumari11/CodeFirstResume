@model IEnumerable<EmpResumeBuilder.Models.Employee>

@{
    ViewBag.Title = "EmpDetails";
}

<h2 >Employee Details</h2>

<style>
    table {
        border-spacing: 0px;
        table-layout: fixed;
        margin-left: auto;
        margin-right: auto;
        width: 510px;
        border-collapse: collapse;
        width: 100%;
    }

    td {
        border: 1px solid #666;
        word-break: break-all;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: black;
        color: white;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TechnicalSkills)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelevantExperience)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechnicalSkills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelevantExperience)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmpId }) |
                @Html.ActionLink("View Details", "Details", new { id=item.EmpId }) |
                @*@Html.ActionLink("Export To PDF", "PrintPartialViewToPdf", new { id = item.EmpId, style = "color: Red" }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.EmpId })
            </td>
        </tr>
    }

</table>
